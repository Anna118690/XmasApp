@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Xmas - Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/Areas/Membre/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Areas/Membre/css/sb-admin-2.css" rel="stylesheet">

</head>
@if(ViewBag.SuccessMessage!=null)
{
   <div class="alert alert-info">
        @ViewBag.SuccessMessage
   </div>
}
<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <form class="user" action="/Home/Login"  method="post">
                                        
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Login</h1>
                                        </div>
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" id="Email" name="Email" aria-describedby="emailHelp" placeholder="Enter Email Address...">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user" id="Password" name="Password" placeholder="Password">
                                        </div>
                                        <input type="submit" class="btn btn-primary btn-user btn-block" value="Login" />
                                        <hr>
                                        @if (@ViewBag.ErrorLoginMessage != null)
                                        {

                                            <center>
                                                <p class="alert alert-danger">@Html.Raw(ViewBag.ErrorLoginMessage)</p>
                                            </center>
                                        }
                                    </form> 
                                    <form class="user" action="/Home/Register" method="post"
                                          enctype="multipart/form-data">
                                        @*Create a Token to avoid forms attacks*@
                                        @Html.AntiForgeryToken()
                                        @*IMPORTANT: WITHOUT ENCTYPE, NO FILES CAN BE UPLOADED*@
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Register</h1>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="Nom" name="Nom" placeholder="Votre nom...">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="Prenom" name="Prenom" placeholder="Votre prénom...">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="Surnom" name="Surnom" placeholder="Votre surnom...">
                                        </div>
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" id="Email" name="Email" placeholder="Votre courriel...">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" required class="form-control form-control-user" id="Password" name="MotDePasse" placeholder="Votre mot de passe">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" required class="form-control form-control-user" id="RepeatPassword" name="ConfirmMotDePasse" placeholder="Confirmation du Mot de passe">
                                        </div>

                                        <div class="form-group">
                                            <input type="file" required class="form-control form-control-user" id="ProfilePicture" name="ProfilePicture">
                                        </div>
                                        <input type="submit" class="btn btn-primary btn-user btn-block" value="Enregistrer" />
                                        <hr>

                                        @if (@ViewBag.ErrorMessage != null)
                                        {

                                            <center>
                                                <p class="alert alert-danger">@Html.Raw(ViewBag.ErrorMessage)</p>
                                            </center>
                                        }
                                    </form>
                                       
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Areas/Membre/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/Membre/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Areas/Membre/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Areas/Membre/js/sb-admin-2.min.js"></script>

</body>

</html>
